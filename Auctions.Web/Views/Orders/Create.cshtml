@model Auctions.Data.Models.CreateOrderViewModel

@{
    ViewBag.Title = "Create order";
}

<h2>Create new order</h2>

<hr />

@using (Html.BeginForm("Create", "Orders", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">


            @Html.RadioButtonFor(model => model.Package, Auctions.Data.Models.OrderPackage.SILVER)
            @Html.Label("Silver") @ViewBag.silver tokens for
            @{
                var price = ViewBag.silver * ViewBag.tokenPrice;
            }
            @price
            @ViewBag.currency
            <br />
            @Html.RadioButtonFor(model => model.Package, Auctions.Data.Models.OrderPackage.GOLD)
            @Html.Label("Gold") @ViewBag.gold tokens for
            @{
                price = ViewBag.gold * ViewBag.tokenPrice;
            }
            @price
            @ViewBag.currency
            <br />
            @Html.RadioButtonFor(model => model.Package, Auctions.Data.Models.OrderPackage.PLATINUM)
            @Html.Label("Platinum") @ViewBag.platinum tokens for
            @{
                price = ViewBag.platinum * ViewBag.tokenPrice;
            }
            @price
            @ViewBag.currency

            <br />
            @Html.ValidationMessageFor(model => model.Package, "", new { @class = "text-danger" })

            <br />
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        
    </div>

}

<div>
    @Html.ActionLink("Back", "Index")
</div>
